    <%- include('parts/header.ejs') %>

      <div class="main-login">
        <div class="left-login">
          <h1>Faça login<br>Adquira nossos produtos </h1>
          <img src="/img/soccer-animate.svg" class="left-login-image" alt="soccer">
        </div>
        <div class="right-login">
          <div class="card-login">
            <h1>Login</h1>
